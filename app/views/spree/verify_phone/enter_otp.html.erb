<div class="content indent">
  <div class="thumb-box">
    <div class="container">
      <h2><strong>Verify</strong> OTP</h2>

      <%#= render :partial => 'spree/shared/error_messages', :locals => { :target => resource } %>


      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="tabs">
          <div class="tab-content">
            <div id="tab1" class="tab active">
              <div class="row">

                <div class="col-lg-10 col-md-10 col-sm-10">

                  <%= form_tag ('verify_phone/verify_otp'), id: 'contact-form'  do |f| %>

                      <div>
                        <div class="tab-form-lable">Enter OTP</div>
                        <label class="email">
                          <%= text_field_tag :otp %>
                        </label>
                      </div>

                      <div class="btns">
                        <%= submit_tag 'Submit', :class => 'btn-default btn4' %>
                      </div>

                  <% end %>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
