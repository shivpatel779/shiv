<div class="thumb-box2">
  <div class="container">
    <h2><strong>Finished</strong> Auctions</h2>

    <div class="row">

      <% @products.first(4).each do |product| %>
          <div class="col-lg-3 col-md-6 col-sm-6 maxheight">
            <div class="thumb-pad1">

              <%= link_to spree.product_path(product) do %>
                  <div class="badge">Final price<strong>876</strong></div>
                  <div class="thumbnail">
                    <figure>
                      <%= product_image(product, itemprop: "image") %>
                    </figure>
                    <div class="caption">
                      <%= content_tag(:p, truncate(product.name, length: 50), itemprop: "name", title: product.name) %>
                    </div>
                  </div>
              <% end %>

            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>