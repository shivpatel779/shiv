<div class="content indent">
  <div class="thumb-box">
    <div class="container">
      <h2> Refer via <strong>Email</strong></h2>

      <%#= render :partial => 'spree/shared/error_messages', :locals => { :target => resource } %>

      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="tabs">
          <div class="tab-content">
            <div id="tab1" class="tab active">
              <div class="row">
                <div class="col-lg-10 col-md-10 col-sm-10">

                  <%= form_tag ('/invite/create'), id: 'contact-form'  do |f| %>

                      <div>
                        <div class="tab-form-lable">Email Address(es)</div>
                        <label class="email">
                          <%= text_field_tag :email_address, '', placeholder: 'andrew@example.com tori@example.com'  %>
                        </label>
                      </div>

                      <strong>OR</strong>

                      <div>
                        <label class="email">
                          <%#= render_shareable :buttons=> ['twitter', 'facebook'], url: 'http://fierce-reef-22139.herokuapp.com/' %>
                          <%= social_share_button_tag('', {url: referral_url_string}) %>
                        </label>
                      </div>

                      <div class="btns">
                        <%= submit_tag 'Invite', :class => 'btn-default btn4' %>
                      </div>

                  <% end %>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
